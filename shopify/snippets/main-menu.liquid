<nav class="main-menu">
	<ul class="main-menu__list">
		{% for link in linklists.main-menu.links %}
		{% if link.links.size > 0 %}
			<li class="main-menu__item" x-data="dropdown">
				<a class="main-menu__dropdown" href="{{ link.url }}" @click.prevent="toggle">
					<span>{{ link.title }}</span>
					{% render 'icon-caret' %}
				</a>
				<ul x-cloak class="main-dropmenu" x-show="isOpen" @click.outside="close">
					{% for child_link in link.links %}
						{% if child_link.links.size > 0 %}
							<li class="main-dropmenu__item" x-data="dropdown">
								<a class="main-dropmenu__link" href="{{ child_link.url }}" @click.prevent="toggle">
									<span>{{ child_link.title }}</span>
									{% render 'icon-caret' %}
								</a>
								<ul x-cloak class="main-submenu" x-show="isOpen">
									{% for grandchild_link in child_link.links %}
									<li class="main-submenu__item">
										<a class="main-submenu__link" href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
									</li>
									{% endfor %}
								</ul>
							</li>
						{% else %}
							<li class="main-dropmenu__item">
								<a class="main-dropmenu__link" href="{{ child_link.url }}">
									<span>{{ child_link.title }}</span>
								</a>
							</li>
						{% endif %}
					{% endfor %}
				</ul>
			</li>
			{% else %}
			<li class="main-menu__item">
				<a class="main-menu__link" href="{{ link.url }}">{{ link.title }}</a>
			</li>
		{% endif %}
		{% endfor %}
	</ul>
</nav>